@model IEnumerable<CRUD_Alumnos.Models.Alumno>

@{
    ViewBag.Title = "Lista de Alumnos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Todos los Alumnos</h2>

<p>
    @Html.ActionLink("Create New", "Add")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Completo
        </th>
        <th>
            Edad
        </th>
        <th>
            Sexo
        </th>
        <th>
            Fecha Alta
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @*Podemos hacer una clase Parcial para agregarle nuevas propiedades a mi clase*@
                @Html.DisplayFor(modelItem => item.NombreCompleto)
            </td>
            @*<td>
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
            <td>
                @{
                    if (item.Sexo == "M")
                    {
                        <span>Masculino</span>
                    }
                    else
                    {
                        <span>Femenino</span>
                    }
                }


            </td>
            <td>
                @item.FechaRegistro.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("Editar", "Editar", new { ID = item.ID }) |
                @Html.ActionLink("Detalles", "Detallesalumno", new { ID = item.ID }) |
                @Html.ActionLink("Eliminar", "EliminarAlumno", new { ID = item.ID }, new { @class = "aEliminar" })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(".aEliminar").click(function (event) {
            if (!confirm('Estás seguro de Eliminar ?')) {
                event.preventDefault();
            }
        });
    </script>

    }

